<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-4">
          <%= f.email_field :email, class: "input input-bordered w-full max-w-xs", placeholder: "メールアドレス" %>
        </div>
        <div class="mb-4">
          <%= f.password_field :password, class: "input input-bordered w-full max-w-xs", placeholder: "パスワード" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center mt-8'>
        <%= link_to '登録ページへ', new_user_path %>
      </div>
    </div>
  </div>
</div>