<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>ユーザー登録</h1>
      <%= form_with model: @user do |f| %>
        <div class="mb-4">
          <%= f.text_field :name, class: "input input-bordered w-full max-w-xs", placeholder: "お名前" %>
        </div>
        <div class="mb-4">
          <%= f.email_field :email, class: "input input-bordered w-full max-w-xs", placeholder: "メールアドレス" %>
        </div>
        <div class="mb-4">
          <%= f.password_field :password, class: "input input-bordered w-full max-w-xs", placeholder: "パスワード" %>
        </div>
        <div class="mb-4">
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full max-w-xs", placeholder: "パスワード確認" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
      </div>
    </div>
  </div>
</div>

